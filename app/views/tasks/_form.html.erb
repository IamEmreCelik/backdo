<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
 <div class="row">
  	<div class="form-group">
		<div class="col-xs-4">
	    <%= f.input :content, label: false, required: true, autofocus: true, input_html: {class: "form-control"}, placeholder: "Content" %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-xs-4">
	    <%= f.button :submit, class: "btn btn-md btn-primary btn-block" %>
	</div>
</div>
<% end %>
